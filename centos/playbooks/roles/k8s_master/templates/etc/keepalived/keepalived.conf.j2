# https://www.keepalived.org/manpage.html
# Configuration File for keepalived
global_defs {
    router_id LVS_DEVEL
}

vrrp_script check_apiserver {
    script "/etc/keepalived/check_apiserver.sh"
    interval 3
    weight 20
    fall 10
    rise 2
}

vrrp_instance VI_1 {
    state {{ k8s_keepalived_state }}
    interface {{ k8s_keepalived_interface }}
    virtual_router_id {{ k8s_keepalived_virtual_router_id }}
    priority {{ k8s_keepalived_priority }}
    nopreempt
    authentication {
        auth_type PASS
        auth_pass {{ k8s_keepalived_auth_pass }}
    }
    virtual_ipaddress {
        {{ k8s_keepalived_virtual_ipaddress }}
    }
    track_script {
        check_apiserver
    }
}
